{
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter=./frontend dev",
    "build:fe": "pnpm --filter=./frontend build",
    "node": "pnpm --filter=./backend node",
    "deploy:local": "pnpm --filter=./backend deploy:local",
    "build:be": "pnpm --filter=./backend build",
    "docs:dev": "pnpm --filter=./docs dev",
    "build:gh": "pnpm --filter=./frontend build --base=/skillchain/",
    "deploy:gh": "git subtree split --prefix frontend/dist -b gh-pages && git push origin gh-pages:gh-pages --force && git branch -D gh-pages",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "eslint": "^8.56.0",
    "eslint-define-config": "^2.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "simple-git-hooks": "^2.9.0"
  },
  "pnpm": {
    "overrides": {
      "axios@>=0.8.1 <1.6.0": ">=1.6.0",
      "follow-redirects@<1.15.4": ">=1.15.4",
      "semver@<5.7.2": ">=5.7.2"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "*.sol": "prettier --write --plugin=prettier-plugin-solidity 'backend/contracts/**/*.sol'"
  }
}
